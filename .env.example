# Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Clash Royale API Token from https://developer.clashroyale.com
CR_API_TOKEN=your_clash_royale_api_token_here

# Clan tag without the # symbol
CLAN_TAG=your_clan_tag_here

# Heroku Postgres connection string
DATABASE_URL=postgresql://username:password@host:5432/dbname

# Background task interval in seconds (default: 3600 = 1 hour)
FETCH_INTERVAL_SECONDS=3600

# Backfill weeks for /riverracelog imports
BACKFILL_WEEKS=8

# Daily snapshot hour (UTC)
SNAPSHOT_UTC_HOUR=0

# Days of inactivity threshold for /inactive command
INACTIVE_DAYS_THRESHOLD=7

# Kick shortlist settings
NEW_MEMBER_WEEKS_PLAYED=2
REVIVED_DECKS_THRESHOLD=8
KICK_SHORTLIST_LIMIT=3

# Optional reverse proxy base URL for CR API
CR_API_BASE_URL=https://cr.vibag.page/v1
